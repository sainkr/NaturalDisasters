<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="도움말"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=" 본 서비스는 자연재해로 인해 발생하는 안전 문제들에 대비하여, 대한민국 국민의 안전을 책임지는 서비스 입니다."
        android:textSize="20sp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림 수신 여부"
            android:textSize="30sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/notiCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="알림"
            android:textSize="17sp"/>

        <CheckBox
            android:id="@+id/msgCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="문자"
            android:textSize="17sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="비밀번호 변경"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/password"
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/line_remove"
        android:ems="10"
        android:hint="기존 비밀번호"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/newPassword"
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/line_remove"
        android:ems="10"
        android:hint="바꿀 비밀번호"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/newPasswordCheck"
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/line_remove"
        android:ems="10"
        android:hint="바꿀 비밀번호 확인"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_changePasswrod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:text="수정"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="계정"
            android:textSize="30sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:text="로그아웃" />
    </LinearLayout>

</LinearLayout>